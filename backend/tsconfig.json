{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "allowJs": false,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "common/*": ["../../common/*"]
    }
  },
  "include": ["src"]
}
